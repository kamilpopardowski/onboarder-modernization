@model IEnumerable<LegacyOnboarder.Models.RequestRecord>

@{
    ViewData["Title"] = "Final Review";
}

<div class="container mt-4">
    <h2>Final Completion Review</h2>
    <p class="text-muted">Requests with all tasks completed and awaiting final approval.</p>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No requests awaiting final review.</div>
    }
    else
    {
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Id</th>
                <th>Employee</th>
                <th>Type</th>
                <th>Approval</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.EmployeeFirstName @r.EmployeeLastName</td>
                    <td>@(r.IsOffboarding ? "Offboarding" : "Onboarding")</td>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" disabled />
                            <label class="form-check-label">Ready for approval</label>
                        </div>
                        <input type="text" class="form-control form-control-sm mt-2" placeholder="Signature" disabled />
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>
