@model IEnumerable<LegacyOnboarder.Models.RequestRecord>

@{
    ViewData["Title"] = "Final Review";
}

<div class="container mt-4">
    <div class="d-flex align-items-center justify-content-between mb-2">
        <div>
            <h2 class="mb-0">Final Completion Review</h2>
            <p class="text-muted mb-0">All requests awaiting final approval.</p>
        </div>
        <div class="badge bg-primary fs-6">@Model.Count() awaiting</div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">No requests awaiting final review.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-sm align-middle">
                <thead>
                <tr>
                    <th class="text-center">Select</th>
                    <th>Id</th>
                    <th>Employee</th>
                    <th>Type</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td class="text-center">
                            <input type="checkbox" disabled />
                        </td>
                        <td>@r.Id</td>
                        <td>@r.EmployeeFirstName @r.EmployeeLastName</td>
                        <td>@(r.IsOffboarding ? "Offboarding" : "Onboarding")</td>
                        <td><span class="badge bg-warning text-dark">Awaiting approval</span></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>
