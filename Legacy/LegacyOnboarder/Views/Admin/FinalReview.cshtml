@model IEnumerable<LegacyOnboarder.Models.RequestRecord>

@{
    ViewData["Title"] = "Final Review";
}

<div class="container mt-4">
    <h2>Final Completion Review</h2>
    <p class="text-muted">Requests with all tasks completed and awaiting final approval.</p>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">No requests awaiting final review.</div>
    }
    else
    {
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Id</th>
                <th>Employee</th>
                <th>Type</th>
                <th>Approval</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.EmployeeFirstName @r.EmployeeLastName</td>
                    <td>@(r.IsOffboarding ? "Offboarding" : "Onboarding")</td>
                    <td>
                        <form asp-action="ApproveCompletion" method="post" class="d-flex flex-column gap-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@r.Id" />
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="approve-@r.Id" name="approve" value="true" />
                                <label class="form-check-label" for="approve-@r.Id">I confirm final completion</label>
                            </div>
                            <input type="text" name="signature" class="form-control form-control-sm" placeholder="Signature" />
                            <button class="btn btn-primary btn-sm" type="submit">Approve</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>
