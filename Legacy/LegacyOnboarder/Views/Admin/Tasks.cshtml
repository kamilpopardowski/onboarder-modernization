@model List<LegacyOnboarder.Models.RequestTask>
@{
    var request = ViewBag.Request as LegacyOnboarder.Models.RequestRecord;
}

<h2>Checklist tasks for @request.EmployeeFirstName @request.EmployeeLastName</h2>

<form asp-action="SaveTasks" method="post">
    <input type="hidden" name="requestId" value="@request.Id"/>

    <table class="table table-sm">
        <thead>
        <tr>
            <th>Task</th>
            <th>Assigned To</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            var t = Model[i];
            <tr>
                <td>
                    @t.DisplayName
                    <input type="hidden" name="taskId" value="@t.Id"/>
                </td>
                <td>
                    <input type="text"
                           name="assignedToUser"
                           class="form-control form-control-sm"
                           value="@t.AssignedToUser"/>
                </td>
                <td>
                    <select name="status" class="form-control form-control-sm">
                        <option value="pending"
                                selected="@(t.Status == ProvisioningStatus.Pending ? "selected" : null)">
                            Pending
                        </option>
                        <option value="done"
                                selected="@(t.Status == ProvisioningStatus.Success ? "selected" : null)">
                            Done
                        </option>
                    </select>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>