@using Microsoft.AspNetCore.Mvc.Rendering
@model List<LegacyOnboarder.Models.RequestTask>
@{
    var request = ViewBag.Request as LegacyOnboarder.Models.RequestRecord;
    var employees = ViewBag.Employees as List<SelectListItem> ?? new List<SelectListItem>();
    var isReadOnly = request?.IsFinalApproved ?? false;
}

<div class="d-flex align-items-center justify-content-between">
    <h2 class="mb-0">Checklist tasks for @request.EmployeeFirstName @request.EmployeeLastName</h2>
    @if (request != null)
    {
        @await Html.PartialAsync("_ProgressTracker", request.Id)
    }
</div>

<form asp-action="SaveTasks" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="requestId" value="@request.Id"/>

    <table class="table table-sm" id="tasks-table">
        <thead>
        <tr>
            <th>Task</th>
            <th>Assigned To</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            var t = Model[i];
            <tr>
                <td>
                    @t.DisplayName
                    <input type="hidden" name="taskId" value="@t.Id"/>
                </td>
                <td>
                    <select name="assignedToUser"
                            class="form-select select2-lookup form-select-sm"
                            title=" -- Select Employee -- "
                            @(isReadOnly ? "disabled" : "")>
                        <option></option>
                        @foreach (var employee in employees)
                        {
                            <option value="@employee.Value"
                                    selected="@(t.AssignedToUser == employee.Value ? "selected" : null)">
                                @employee.Text
                            </option>
                        }
                    </select>
                </td>
                <td>
                    <select name="status" class="form-control form-control-sm" @(isReadOnly ? "disabled" : "")>
                        <option value="pending"
                                selected="@(t.Status == ProvisioningStatus.Pending ? "selected" : null)">
                            Pending
                        </option>
                        <option value="done"
                                selected="@(t.Status == ProvisioningStatus.Success ? "selected" : null)">
                            Done
                        </option>
                    </select>
                </td>
            </tr>
        }
        </tbody>
    </table>

    @if (!isReadOnly)
    {
        <button type="submit" class="btn btn-primary">Save</button>
    }
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
